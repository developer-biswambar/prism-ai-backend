# Docker Environment Variables
# ===========================
# These can be passed directly to Docker containers

# Application Environment
ENVIRONMENT=production

# Server Configuration  
HOST=0.0.0.0
PORT=8000
SERVER_URL=https://your-production-domain.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Application Settings
APP_NAME=Financial Data Extraction API
VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-production-secret-key

# File Processing
TEMP_DIR=/app/temp
BATCH_SIZE=100
MAX_ROWS_PER_FILE=1000000
MAX_FILE_SIZE=500
LARGE_FILE_THRESHOLD=100000

# CORS Settings (Production)
ALLOWED_ORIGINS=https://your-frontend.com,https://your-admin-panel.com

# Logging
LOG_LEVEL=info

# Performance Settings
CHUNK_SIZE=10000
MEMORY_LIMIT_GB=8

# Threading (for high-performance servers)
FTT_ML_CORES=16

# Storage
STORAGE_TYPE=local

# Security
ANONYMIZED_TELEMETRY=false

# Health Check
HEALTH_CHECK_TIMEOUT=30